<Page
    x:Class="App1.PinAuth"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid x:ConnectionId='1' x:Name="Grid_Hello" HorizontalAlignment="Center" Height="100" Margin="0" VerticalAlignment="Center" Width="300">
            <TextBlock x:ConnectionId='2' x:Name="textBlock" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Пожалуйста, введите ваш PIN-код" VerticalAlignment="Top" Width="257"/>
            <TextBox x:ConnectionId='3' x:Name="textBox_PIN" HorizontalAlignment="Center" Margin="0,50,50,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" PlaceholderText="Ваш PIN код" Width="200"/>
            <Button x:ConnectionId='4' x:Name="button_PIN" Content="ОК" HorizontalAlignment="Center" Margin="230,31,0,0" VerticalAlignment="Center"                         />
        </Grid>

    </Grid>
</Page>

